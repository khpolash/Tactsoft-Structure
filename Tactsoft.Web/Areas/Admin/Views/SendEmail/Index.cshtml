<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Email Form</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Email Form</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<!-- Email Body Form Start -->
<div class="container-fluid">
    <div class="card p-4">
        <div class="row justify-content-center">
          <div class="col-lg-7 col-md-8 col-sm-12">
                <h3 class="mb-3">Submit a request</h3>
                <form action="">
                    <div class="mb-3">
                        <label for="tellUs" class="form-label">We're here to help! Tell us more</label>
                        <select class="form-select" aria-label="">
                            <option selected>I have a trial account or do not have an account</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Your mail address</label>
                        <input type="email" class="form-control" id="email">
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="summernote" name="editordata" class="form-control">
                        Place <em>some</em> <u>text</u> <strong>here</strong>
                    </textarea>
                        <span>Please enter the details of your request. A member of our team will respond as soon as possible.</span>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Attachments</label>
                        <input class="form-control" type="file" id="formFile">
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Email Body Form End -->


@section Scripts{
    <script src="~/adminlte/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
        });
    </script>>
}