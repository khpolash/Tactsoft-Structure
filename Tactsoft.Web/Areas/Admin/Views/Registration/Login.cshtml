    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Login Form</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Login Form</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
