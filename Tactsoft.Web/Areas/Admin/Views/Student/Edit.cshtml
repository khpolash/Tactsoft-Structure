@model Tactsoft.Application.ViewModels.VmEntities.StudentVm
@using Tactsoft.SharedKernel.Core.Default
@{
    ViewData["Title"] = "Edit";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Enroll Student Form</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Enroll Student Form</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <!-- Entry Form Start -->
    <div class="container-fluid">
        <div class="card" style="">
            <div class="border-bottom px-3 py-2 rounded-top">
                <div class="d-flex justify-content-between">
                    <h6>Enroll Student</h6
                </div>
            </div>

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" class="form-control" />
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateOfBirth" class="control-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MobileNumber" class="control-label"></label>
                                <input asp-for="MobileNumber" class="form-control" />
                                <span asp-validation-for="MobileNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Gender</label>
                                <div class="d-flex form-control">
                                    @foreach (var gender in Enum.GetValues(typeof(Gender)))
                                    {
                                        <div class="form-check me-3">
                                            <input asp-for="Gender" type="radio" class="form-check-input" value="@gender" id="@gender" />
                                            <label class="form-check-label" for="@gender">@gender</label>
                                        </div>
                                    }
                                </div>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CountryId" class="control-label"></label>
                                <select asp-for="CountryId" asp-items="Model.CountryDropdown" class="form-control">
                                    <option>Select Country</option>
                                </select>
                                <span asp-validation-for="CountryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StateId" class="control-label"></label>
                                <select asp-for="StateId" asp-items="Model.StateDropdown" class="form-control">
                                    <option>Select State</option>
                                </select>
                                <span asp-validation-for="StateId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CityId" class="control-label"></label>
                                <select asp-for="CityId" asp-items="Model.CityDropdown" class="form-control">
                                    <option>Select City</option>
                                </select>
                                <span asp-validation-for="CityId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ZipCode" class="control-label"></label>
                                <input asp-for="ZipCode" class="form-control" />
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label"><strong>Education</strong></label>
                                <div class="d-flex form-control">
                                    <div class="form-check me-3">
                                        <input class="form-check-input" asp-for="SSC" />
                                        <label class="form-check-label" for="SSC">
                                            @Html.DisplayNameFor(model => model.SSC)
                                        </label>
                                    </div>
                                    <div class="form-check me-3">
                                        <input class="form-check-input" asp-for="HSC" />
                                        <label class="form-check-label" for="HSC">
                                            @Html.DisplayNameFor(model => model.HSC)
                                        </label>
                                    </div>
                                    <div class="form-check me-3">
                                        <input class="form-check-input" asp-for="Bachelor" />
                                        <label class="form-check-label" for="Bachelor">
                                            @Html.DisplayNameFor(model => model.Bachelor)
                                        </label>
                                    </div>
                                    <div class="form-check me-3">
                                        <input class="form-check-input" asp-for="Masters" />
                                        <label class="form-check-label" for="Masters">
                                            @Html.DisplayNameFor(model => model.Masters)
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProfilePhotoFile" class="control-label"></label>
                                <input asp-for="ProfilePhotoFile" class="form-control" />
                                <span asp-validation-for="ProfilePhotoFile" class="text-danger"></span>
                            </div>
                            <div class="mt-3">
                                <div class="imgPreview-area" id="imgPreview">
                                    @if (!string.IsNullOrEmpty(Model.ProfilePhoto))
                                    {
                                        <img src="~/images/students/@Url.Content(Model.ProfilePhoto)" alt="Image Preview" class="preview-image" style="width: 100px; height: auto;" />
                                    }
                                    else
                                    {
                                        <span class="imgPreview-defaultText">Preview Image</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="border-top px-3 py-2 d-flex justify-content-between">
                    <a asp-action="Index">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                </div>
            </form>
        </div>
    </div>
</section>


<!-- Image Preview Start -->
@section Scripts{
    <script>

        $(document).ready(function () {
            $('#CountryId').change(function () {
                debugger
                $.ajax({
                    type: "get",
                    url: "/Admin/Student/StatesByCountryId",
                    data: { countryId: $('#CountryId').val() },
                    datatype: "json",
                    traditional: true,
                    success: function (data) {
                        var state = "<select id='StateId'>";
                        state = state + '<option value="">Select State</option>';
                        for (var i = 0; i < data.length; i++) {
                            state = state + '<option value=' + data[i].id + '>' + data[i].name + '</option>';
                        }
                        state = state + '</select>';
                        $('#StateId').html(state);
                    }
                });
            });
            $('#StateId').change(function () {
                $.ajax({
                    type: "get",
                    url: "/Admin/Student/CitiesByStateId",
                    data: { stateId: $('#StateId').val() },
                    datatype: "json",
                    traditional: true,
                    success: function (data) {
                        var city = "<select id='CityId'>";
                        city = city + '<option value="">Select city</option>';
                        for (var i = 0; i < data.length; i++) {
                            city = city + '<option value=' + data[i].id + '>' + data[i].name + '</option>';
                        }
                        city = city + '</select>';
                        $('#CityId').html(city);
                    }
                });
            });

        });

    </script>

    <script>
        const inpFile = document.getElementById("ProfilePhotoFile");
        const preview_Container = document.getElementById("imgPreview");
        const previewImage = preview_Container.querySelector(".preview-iamge");
        const preview_DefaultText = preview_Container.querySelector(".imgPreview-defaultText");

        inpFile.addEventListener("change", function () {
            const imgFile = this.files[0];

            if (imgFile) {
                const reader = new FileReader();
                preview_DefaultText.style.display = "none";
                previewImage.style.display = "block";
                reader.addEventListener("load", function () {
                    console.log(this);
                    previewImage.setAttribute("src", this.result);
                });
                reader.readAsDataURL(imgFile);
            }
            else {
                preview_DefaultText.style.display = null;
                previewImage.style.display = null;
            }
        });
    </script>
}
<!-- Image Preview End -->
